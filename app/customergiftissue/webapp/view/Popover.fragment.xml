<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="myPopover"
		title="{i18n>TITLE_POPOVER}"
		placement="Bottom">
			<List items="{/ShoppingMallSet}">
                <CustomListItem>
                    <VBox class="sapUiSmallMargin">
                        <HBox>
                            <Label text="{i18n>TEXT_USERID}" />
                            <Text text=" {UserId}" />
                        </HBox>
                        <HBox>
                            <Label text="{i18n>TEXT_PLANT}" />
                            <Text text="{Plant}" />
                        </HBox>
                        <HBox>
                            <Label text="{i18n>TEXT_USERNM}" />
                            <Text text="{UserName}" />
                        </HBox>
                    </VBox>
                </CustomListItem>
            </List>
	</Popover>
</core:FragmentDefinition>